<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      type="text/css"
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
    />
    <title>Đăng ký</title>

    <style>
       #wrapper {
         width: 30em;
         padding: 0px 20px;
       }
    </style>

  </head>

  <body>
    <div id='wrapper'>
      <h1 style="margin: 0">ĐĂNG KÝ XÉT TUYỂN</h1>
      <form method="POST" class="pb-3" action="/set-up-register">
        <input type="text" hidden name="psid" id="psid" />

        <div class="mb-2">
          <label for="name" class="mb-1 form-label fw-bold">Họ Tên:</label>
          <input
            type="text"
            required
            class="form-control"
            id="name"
            value=""
            name="name"
          />
        </div>

        <div class="mb-2">
          <label for="number" class="mb-1 form-label fw-bold"
            >Số Điện Thoại:</label
          >
          <input
            type="text"
            required
            class="form-control"
            id="number"
            value=""
            name="number"
          />
        </div>

        <div class="mb-2">
          <label for="email" class="mb-1 form-label fw-bold">Email:</label>
          <input
            type="email"
            required
            class="form-control"
            id="email"
            value=""
            name="email"
          />
        </div>

        <label for="txtDate" class="mb-1 form-label fw-bold">Ngày Sinh:</label>
        <div class="mb-2 d-flex">
          <input
            id="txtDate"
            type="text"
            required
            value=""
            name="txtDate"
            class="form-control"
            placeholder="VD:19/12/1995"
          />
          <label for="txtDate" class="mb-1 form-label fw-bold"
            ><i class="fa fa-calendar-check-o fa-2x" aria-hidden="true"></i
          ></label>
        </div>

        <div class="mb-2">
          <label for="" class="mb-1 fw-bold">Ngành Học:</label>
          <select
            name="major"
            required
            class="form-select"
            aria-label="Default select example"
          >
            <option value="">- Chọn ngành học -</option>
            <option value="Ngôn Ngữ Anh">Ngôn Ngữ Anh</option>
            <option value="Công Nghệ Thông Tin">Công Nghệ Thông Tin</option>
            <option value="Du Lịch Lữ Hành">Du Lịch Lữ Hành</option>
          </select>
        </div>

        <div class="mb-2">
          <label for="address" class="mb-1 form-label fw-bold">Địa Chỉ:</label>
          <input
            type="text"
            required
            class="form-control"
            id="address"
            value=""
            name="address"
            placeholder=""
          />
        </div>

        <button
          type="submit"
          onclick="handleSaveBtn()"
          class="mt-2 btn btn-primary w-100"
        >
          Đăng ký
        </button>
      </form>
    </div>
  </body>
</html>

<style>
  body {
    padding-top: 1em;
    display: flex;
    justify-content: center;
    height: 100vh;
    font-family: -apple-system, sans-serif;
  }
  #txtDate {
    padding-bottom: 0;
    height: 35px;
  }
</style>

<script>
  (function (d, s, id) {
    var js,
      fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {
      return;
    }
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/en_US/messenger.Extensions.js";
    fjs.parentNode.insertBefore(js, fjs);
  })(document, "script", "Messenger");

  window.extAsyncInit = function () {
    MessengerExtensions.getContext(
      "208033644177404",
      function success(thread_context) {
        document.getElementById("psid").value = thread_context.psid;
      },
      function error(err) {
        console.log(err);
      }
    );
  };

  function handleSaveBtn() {
    MessengerExtensions.requestCloseBrowser(
      function success() {},
      function error(err) {
        console.log(err);
      }
    );
  }
</script>
