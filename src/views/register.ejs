<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      type="text/css"
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
    />
    <title>Đăng ký</title>
  </head>

  <body>
    <div>
      <h2>ĐĂNG KÝ XÉT TUYỂN</h2>
      <form method="POST" action="/set-up-webview" class="pb-5">
        <input type="text" hidden name="psid" id="psid" />

        <div class="mb-2">
          <label for="name" class="form-label fw-bold">Họ Tên:</label>
          <input
            type="text"
            required
            class="form-control"
            id="name"
            value=""
            name="name"
          />
        </div>

        <div class="mb-2">
          <label for="number" class="form-label fw-bold">Số Điện Thoại:</label>
          <input
            type="text"
            required
            class="form-control"
            id="number"
            value=""
            name="number"
          />
        </div>

        <div class="mb-2">
          <label for="email" class="form-label fw-bold">Email:</label>
          <input
            type="email"
            required
            class="form-control"
            id="email"
            value=""
            name="email"
          />
        </div>

        <label for="txtDate" class="form-label fw-bold">Ngày Sinh:</label>
        <div class="mb-2 d-flex">
          <input
            id="txtDate"
            type="text"
            value=""
            required
            name="txtDate"
            class="form-control"
            placeholder="VD:19/12/1995"
          />
        </div>

        <div class="mb-2">
          <label for="" class="fw-bold mb-2">Ngành Học:</label>
          <select class="form-select" required name="major">
            <option value="">- Chọn ngành học -</option>
            <option value="Ngôn Ngữ Anh">Ngôn Ngữ Anh</option>
            <option value="Công Nghệ Thông Tin">Công Nghệ Thông Tin</option>
            <option value="Du Lịch Lữ Hành">Du Lịch Lữ Hành</option>
          </select>
        </div>

        <div class="mb-2">
          <label for="address" class="form-label fw-bold">Địa Chỉ:</label>
          <input
            type="text"
            required
            class="form-control"
            id="address"
            value=""
            name="address"
          />
        </div>

        <button
          type="submit"
          onclick="handleSaveBtn()"
          class="btn btn-primary w-100 mt-2"
        >
          Đăng ký
        </button>
      </form>
    </div>
  </body>
</html>

<style>
  body {
    padding-top: 1em;
    display: flex;
    justify-content: center;
    height: 100vh;
    font-family: -apple-system, sans-serif;
  }
</style>

<script>
  (function (d, s, id) {
    var js,
      fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {
      return;
    }
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/en_US/messenger.Extensions.js";
    fjs.parentNode.insertBefore(js, fjs);
  })(document, "script", "Messenger");

  window.extAsyncInit = function () {
    MessengerExtensions.getContext(
      "208033644177404",
      function success(thread_context) {
        document.getElementById("psid").value = thread_context.psid;
      },
      function error(err) {
        console.log(err);
      }
    );
  };

  function handleSaveBtn() {
    MessengerExtensions.requestCloseBrowser(
      function success() {},
      function error(err) {
        console.log(err);
      }
    );
  }
</script>

